<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ferhat.myapplication.DetailActivity">

    <fragment
        android:id="@+id/frag_detail"
        android:name="com.example.ferhat.myapplication.DetailFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/list_players"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/list_players"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Liste des joueurs"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/frag_detail"
            app:layout_constraintTop_toBottomOf="@+id/frag_detail"/>

</android.support.constraint.ConstraintLayout>
